<body class="background">
    <%- include('navbar'); %>
    <h4 class="titleForm col-10 offset-1"> Un petit voyage en vu ? </h4>

    <table class="table col-10 offset-1">
        <thead>
          <tr>
            <th scope="col">N°</th>
            <th scope="col">Journey</th>
            <th scope="col">Date</th>
            <th scope="col">Departure time</th>
            <th scope="col">Price</th>
          </tr>
        </thead>
        <tbody>
          <% console.log(journeyThatMatch); for (var i=0; i<journeyThatMatch.length; i++){%>
          <tr>
            <th scope="row">1</th>
            <td><%=journeyThatMatch[i].departure%> /  <%=journeyThatMatch[i].arrival%></td>
            <td><%=journeyThatMatch[0].date.toLocaleDateString()%></td>
            <td><%=journeyThatMatch[i].departureTime%></td>
            <td><%=journeyThatMatch[i].price%>€</td>
          </tr>
          <%}%>
          <tfoot>
            <tr>
              <th scope="col">Total</th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col">XX€</th>
            </tfoot>
          </thead>
        </tbody>
      </table>
      <button type="submit" class="btn btn-info buttoncustomprimary col-6 offset-3">Confirm</button>

    
</body>
</html>
<body class="background">
    <%- include('navbar'); %>
    <h4 class="titleForm col-10 offset-1"> Un petit voyage en vu ? </h4>

    <table class="table col-10 offset-1">
        <thead>
          <tr>
            <th scope="col">N°</th>
            <th scope="col">Journey</th>
            <th scope="col">Date</th>
            <th scope="col">Departure time</th>
            <th scope="col">Price</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i=0; i<journeyThatMatch.length; i++){%>
          <tr>
            <th scope="row">1</th>
            <td><%=journeyThatMatch[i].departure%> /  <%=journeyThatMatch[i].arrival%></td>
            <td><%=journeyThatMatch[0].date%></td>
            <td><%=journeyThatMatch[i].departureTime%></td>
            <td><%=journeyThatMatch[i].price%>€</td>
          </tr>
          <%}%>
          <tfoot>
            <tr>
              <th scope="col">Total</th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col">XX€</th>
            </tfoot>
          </thead>
        </tbody>
      </table>
      
      <button id="myPopudcdcp"  type="submit" onclick="openPopup()" class="btn btn-info buttoncustomprimary col-6 offset-3" >Confirm</button>
      <!-- <div class="popup" onclick="myFunction()">Click me!
        <span class="popuptext" id="myPopup">Popup text...</span>
      </div> -->
      <div class="popup" id="popup">
        <img src="/images/404-tick.png">
        <h2>Xie xie!</h2>
        <p>Très bon choix camarade</p>
        <button type="button" onclick="closePopup()">Ok</button>
        </div>
     
      <script src="js/script.js"></script>
</body>
</html>
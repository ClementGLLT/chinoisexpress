      <nav class="navbar bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/images/Train.png" alt="" width="60" height="60" class="d-inline-block align-text-top">
                <p class="typo">Chinois-express</p>
              </a>
          <form class="d-flex" role="search">
            <button class="btn btn-outline-success" type="submit">Search</button>
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </nav>

    <div class="home">

        <div class="row col-10 offset-1">

          <div class="col-12 text-center get_started">
            <h2>Connectez-vous puis voyagez!</h2>
          </div>

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign Up</h4>


              <form action="/users/sign-up" method="post">
                <div class="form-group">
                  <label for="exampleInputUsername">Username</label>
                  <input type="text" class="form-control" placeholder="Enter username" name="usernameFromFront">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" name="emailFromFront">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control"  placeholder="Enter password" name="passwordFromFront">
                </div>
                <button type="submit" class="btn btn-info">Submit</button>
              </form>

            </div>

          </div>

          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">

              <h4 class="titleForm">Sign In</h4>

              <form action="/users/sign-in" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-info ">Submit</button>
              </form>

            </div>

          </div>

        </div>
      </div>
    
</body>
